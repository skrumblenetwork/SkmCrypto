<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="10dp">

    <Button
        android:id="@+id/generate_words"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate 12 worlds"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/words_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/generate_words"
        app:layout_constraintTop_toBottomOf="@+id/generate_words" />

    <Button
        android:id="@+id/generate_private_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/words_text_view"
        app:layout_constraintTop_toBottomOf="@+id/words_text_view"
        android:text="Generate Private Key"/>

    <TextView
        android:id="@+id/private_key_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/generate_private_key"
        app:layout_constraintTop_toBottomOf="@+id/generate_private_key" />

    <Button
        android:id="@+id/generate_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Wallet"
        app:layout_constraintStart_toStartOf="@+id/private_key_text_view"
        app:layout_constraintTop_toBottomOf="@+id/private_key_text_view"/>

    <TextView
        android:id="@+id/wallet_address_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/generate_wallet"
        app:layout_constraintTop_toBottomOf="@+id/generate_wallet" />

</android.support.constraint.ConstraintLayout>